<main class="container">
    <h1>学生信息</h1>
    <table class="text-center table table-hover table-bordered table-responsive table-striped">
        <thead>
        <tr>
            <td>姓名</td>
            <td>年龄</td>
            <td>性别</td>
            <td>所选课程</td>
            <td>操作</td>
            <!--<td>学号</td>-->
        </tr>
        </thead>
        <tbody>

        <% for(var i = 0;i < students.length;i++){ %>
        <tr>
            <td><%= students[i].name %></td>
            <td><%= students[i].age %></td>
            <td><%= students[i].sex %></td>
            <td>
            <%for(var j = 0;j<students[i].course.length;j++){%>
                <%= students[i].course[j]%>
            <%}%>
            </td>
            <td>
                <a href="/edit/<%= students[i].sid %>" class="text-danger">修改</a>
                |
                <a href="/remove/<%= students[i].sid %>" class="text-danger">删除</a>
            </td>
            <!--<td></td>-->
        </tr>
        <% } %>
        </tbody>
    </table>
